# Test terse arithmetic operators and verbose comparison operators
# Ensures i.+/i.- aliases work the same as i.add/i.subtract

: test-terse-add ( -- )
  5 3 i.+ 8 i.= test.assert
  0 0 i.+ 0 i.= test.assert
  0 1 i.subtract 5 i.+ 4 i.= test.assert  # -1 + 5 = 4
;

: test-terse-subtract ( -- )
  5 3 i.- 2 i.= test.assert
  3 5 i.- 0 2 i.subtract i.= test.assert  # 3-5=-2
  0 0 i.- 0 i.= test.assert
;

: test-terse-multiply ( -- )
  5 3 i.* 15 i.= test.assert
  0 100 i.* 0 i.= test.assert
  0 1 i.subtract 5 i.* 0 5 i.subtract i.= test.assert  # -1 * 5 = -5
;

: test-terse-divide ( -- )
  15 3 i./ test.assert 5 i.= test.assert
  10 3 i./ test.assert 3 i.= test.assert  # integer division
  0 5 i.subtract 2 i./ test.assert 0 2 i.subtract i.= test.assert  # -5 / 2 = -2 (truncate toward zero)
;

: test-modulo ( -- )
  10 3 i.% test.assert 1 i.= test.assert
  15 5 i.% test.assert 0 i.= test.assert
  7 4 i.% test.assert 3 i.= test.assert
  100 7 i.% test.assert 2 i.= test.assert
;

: test-verbose-eq ( -- )
  5 5 i.eq test.assert
  5 3 i.eq test.assert-not
;

: test-verbose-lt ( -- )
  3 5 i.lt test.assert
  5 3 i.lt test.assert-not
;

: test-verbose-gt ( -- )
  5 3 i.gt test.assert
  3 5 i.gt test.assert-not
;

: test-verbose-lte ( -- )
  3 5 i.lte test.assert
  5 5 i.lte test.assert
  5 3 i.lte test.assert-not
;

: test-verbose-gte ( -- )
  5 3 i.gte test.assert
  5 5 i.gte test.assert
  3 5 i.gte test.assert-not
;

: test-verbose-neq ( -- )
  5 3 i.neq test.assert
  5 5 i.neq test.assert-not
;
