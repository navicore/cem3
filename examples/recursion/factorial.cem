# Factorial using recursion
# Demonstrates: Simple recursive function

: factorial ( Int -- Int )
  dup 1 <= if
    drop 1
  else
    dup 1 subtract factorial multiply
  then
;

: main ( -- )
  5 factorial
  120 =
  if
    "factorial(5) = 120 ✓" write_line
  else
    "factorial(5) FAILED!" write_line
  then

  0 factorial
  1 =
  if
    "factorial(0) = 1 ✓" write_line
  else
    "factorial(0) FAILED!" write_line
  then
;
