# Float Support Integration Test

: test-f-add ( -- )
  1.5 2.5 f.add 4.0 f.= test.assert
;

: test-f-subtract ( -- )
  10.0 3.0 f.subtract 7.0 f.= test.assert
;

: test-f-multiply ( -- )
  2.5 4.0 f.multiply 10.0 f.= test.assert
;

: test-f-divide ( -- )
  10.0 4.0 f.divide 2.5 f.= test.assert
;

: test-f-less-than ( -- )
  1.5 2.5 f.< test.assert
;

: test-f-greater-than ( -- )
  3.0 2.0 f.> test.assert
;

: test-int-to-float ( -- )
  42 int->float 42.0 f.= test.assert
;

: test-float-to-int-truncates ( -- )
  3.7 float->int 3 test.assert-eq
;

: test-scientific-notation ( -- )
  1e3 1000.0 f.= test.assert
  1.5e2 150.0 f.= test.assert
;
