# Test simple if/then conditionals

: test-if-true ( -- )
  # When condition is true, body should execute
  0  # counter starts at 0
  5 3 i.>
  if
    drop 1  # replace 0 with 1
  then
  1 test.assert-eq
;

: test-if-false ( -- )
  # When condition is false, body should not execute
  0  # counter starts at 0
  3 5 i.>
  if
    drop 1  # this should not run
  then
  0 test.assert-eq
;
