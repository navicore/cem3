# Float Support Integration Test

: main ( -- Int )
  # Basic arithmetic
  1.5 2.5 f.add 4.0 f.= if
    "PASS: f.add (1.5 + 2.5 = 4.0)" write_line
  else
    "FAIL: f.add" write_line
  then

  10.0 3.0 f.subtract 7.0 f.= if
    "PASS: f.subtract (10.0 - 3.0 = 7.0)" write_line
  else
    "FAIL: f.subtract" write_line
  then

  2.5 4.0 f.multiply 10.0 f.= if
    "PASS: f.multiply (2.5 * 4.0 = 10.0)" write_line
  else
    "FAIL: f.multiply" write_line
  then

  10.0 4.0 f.divide 2.5 f.= if
    "PASS: f.divide (10.0 / 4.0 = 2.5)" write_line
  else
    "FAIL: f.divide" write_line
  then

  # Comparisons
  1.5 2.5 f.< if
    "PASS: f.< (1.5 < 2.5)" write_line
  else
    "FAIL: f.<" write_line
  then

  3.0 2.0 f.> if
    "PASS: f.> (3.0 > 2.0)" write_line
  else
    "FAIL: f.>" write_line
  then

  # Conversions
  42 int->float 42.0 f.= if
    "PASS: int->float (42 -> 42.0)" write_line
  else
    "FAIL: int->float" write_line
  then

  3.7 float->int 3 = if
    "PASS: float->int truncates (3.7 -> 3)" write_line
  else
    "FAIL: float->int" write_line
  then

  # Scientific notation
  1e3 1000.0 f.= if
    "PASS: scientific notation (1e3 = 1000.0)" write_line
  else
    "FAIL: scientific notation" write_line
  then

  1.5e2 150.0 f.= if
    "PASS: scientific notation (1.5e2 = 150.0)" write_line
  else
    "FAIL: scientific notation" write_line
  then

  "All float tests completed!" write_line
  0
;
